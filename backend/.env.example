# path: backend/.env.example
# Base de données PostgreSQL
DATABASE_URL="postgresql://clearstack:password@localhost:5432/clearstack_dev"

# JWT Secret pour l'authentification
JWT_SECRET="votre-secret-jwt-super-securise-ici"

# Port du serveur
PORT=3001

# Environnement
NODE_ENV=development

# Configuration SMTP pour les emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@clearstack.fr
EMAIL_REPLY_TO=support@clearstack.fr

# URLs de base
BASE_URL=http://localhost:3000
LOGO_URL=https://clearstack.fr/logo.png

# Configuration Web Push
VAPID_PUBLIC_KEY=REMPLIR
VAPID_PRIVATE_KEY=REMPLIR
VAPID_SUBJECT=mailto:support@clearstack.fr

# LeBonLogiciel Integration
LBL_BASE_URL=https://api.lebonlogiciel.com
LBL_API_KEY=changeme

# Connecteur Prospection
PROSPECT_BASE_URL=https://api.mon-prospect.fr
PROSPECT_API_KEY=changeme
PROSPECT_ENABLED=false

# Analytics (PostHog)
POSTHOG_HOST=https://app.posthog.com
POSTHOG_PROJECT_API_KEY=pk_xxx
POSTHOG_PERSONAL_API_KEY=phc_xxx
MOCK_ANALYTICS=false

# Sécurité & CORS
ALLOWED_ORIGINS=http://localhost:3000,https://app.clearstack.fr